.jq-image {
  width: 100%;
  height: 600rpx;
  margin-bottom: 1rem;
}

.jingquxiangqing {
  padding: 0 0.5rem;
}

.jq-name {
  position: relative;
  border-bottom: 1px solid hsla(0, 0%, 44%, 0.3);
  margin-bottom: 1rem;
  font-size: 24px;
  height: 30px;
  line-height: 30px;
  padding-bottom: 10px;
}

.jqdt {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: 50%;
  height: 400rpx;
  margin-bottom: 24rpx;
}

.jq-count {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 0;
  display: flex;
  position: relative;
  align-content: center;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.jq-title {
  font-size: 20px;
  color: #fff;
  margin-bottom: 10px;
  z-index: 3;
}

.count {
  color: #fff;
  z-index: 4;
}

.swiper {
  position: relative;
  width: 100%;
  height: 1000rpx;
  z-index: 1;
  display: flex;
  box-sizing: content-box;
  margin-bottom: 10px;
}

.swiper-tp {
  width: 100%;
  margin-right: 10px;
  height: 1000rpx;
  flex-shrink: 0;
  background-repeat:no-repeat;
  background-size:100% 100%;
}

.lianjie {
  position: absolute;
  width: 100%;
  height: 1000rpx;
  background-color: rgba(0, 0, 0, 0.2);
}

.jingqu-name {
  position: absolute;
  top: 10%;
  font-size: 16px;
  margin-bottom: 10px;
  z-index: 3;
  color: #fff;
  box-sizing: border-box;
  width: 100%;
  padding: 0 20px;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  display: inline-block;
}

.story-count {
  position: absolute;
  top: 18%;
  left: 20px;
  font-size: 14px;
  color: #fff;
  z-index: 3;
  margin-bottom: 10px;
}

.story {
    position: absolute;
    bottom: 0;
    left: 20px;
    width: 100%;
    box-sizing: border-box;
    z-index: 16;
}
.story-xinxi{
    position: relative;
    display: block;
    width: 100%;
    height: 40px;
    margin-bottom: 10px;
    line-height: 40px;
    color: hsla(0, 0%, 100%, .9)
}
.jiazai{
    position: relative;
    height:200px;
    width:280px;
    left:50%;
    margin-left:-140px;
    top:50%;
    margin-top:-100px;
}
